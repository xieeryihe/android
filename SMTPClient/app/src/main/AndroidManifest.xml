<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smtpclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".ViewEmailActivity"
            android:exported="false"
            android:launchMode="singleTask"/>
        <activity
            android:name=".DraftboxActivity"
            android:exported="false"
            android:launchMode="singleTask"/>
        <activity
            android:name=".SentboxActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:launchMode="singleTask" /> <!-- 不要上面的条 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".EmailActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"> <!-- singleTask设置程序栈只有一个Activity实例 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>